{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": ["promise"],
    "globals":{
      "__dirname":"false",
      "process": "false",
      "console": "false"
    },
    "rules": {
      "no-unused-vars": ["error", {"args": "none" }],
      "promise/param-names": 2,
      "no-console": 0,
        "indent": [ "error", "tab" ],

        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
